@model TestProject.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Войти";
    ViewBag.Title = "Title";
}

<link rel="stylesheet" href="~/css/style.css">

<div id="container">
    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="UserName">Логин</label><br />
            <input asp-for="UserName" class="field" />

        </div>
        <div>
            <label asp-for="Password">Пароль</label><br />
            <input asp-for="Password" class="field" />
        </div>

        <div class="pos">
            <input class="btn btn-sm btn-primary" type="submit" value="Войти" />
        </div>
    </form>
</div>

