@model TestProject.ViewModels.LoginViewModel
<link rel="stylesheet" href="~/css/style.css">

<div id="container">
    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="UserName"></label><br />
            <input asp-for="UserName" class="field" />
            
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" class="field" />            
        </div>
        
        <div class="pos">
            <input class="btn btn-sm btn-primary" type="submit" value="Sign In" />
        </div>
    </form>
</div>

