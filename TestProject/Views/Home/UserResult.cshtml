@{
    ViewData["Title"] = "Мои тесты";
}
@model TestProject.ViewModels.ResultViewModel


    @if (ViewBag.results != null)
    {
<table class="table">
    <tr>
        <th>Предмет</th>
        <th>Вариант</th>
        <th>Оценка</th>
        <th>Дата</th>
        <th></th>
    </tr>
    @foreach (var t in ViewBag.results)
    {
<tr>
    
    <td>@t.Subject</td>
    <td>@t.Variant</td>
    <td>@t.Mark%</td>
    <td>@t.Date.ToShortDateString()</td>
    <td>        
        <form style="float:right" asp-action="DeleteResult" asp-route-id="@t.Id" method="post">
            <a class="btn btn-outline-info" asp-action="ShowResult" asp-controller="UserTest" >Просмотреть</a>
            <button type="submit" class="btn btn-outline-danger">
                Удалить
            </button>
        </form>
</td>
    
</tr>
        
    }
</table>
    }

